@using MyRes = Resources.Resource
@model Pohui.Models.LocalPasswordModel
<div class="row">
    <div class="col-lg-7">
        <div class="well">
            @using (Html.BeginForm("Manage", "Account", FormMethod.Get, new { @class = "bs-example form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                <fieldset>
                    <legend>@MyRes.ChangingPasswordForm</legend>
                    <div class="form-group">
                            @Html.LabelFor(m => m.OldPassword, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", @placeholder = @MyRes.OldPassword })
                        </div>
                    </div>
                    <div class="form-group">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = @MyRes.NewPassword })
                        </div>
                    </div>
                    <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-2 control-label" })
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = @MyRes.ConfirmPassword })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <input type="submit" class="btn btn-primary" value="Change Password" />
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>
