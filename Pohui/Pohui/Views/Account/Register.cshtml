@using MyRes = Resources.Resource
@model Pohui.Models.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="col-lg-10">
        <div class="well">
            <form class="bs-example form-horizontal">
                <fieldset>
                    <legend>Register Form</legend>
                    <div class="form-group">
                         <p class="col-lg-3 control-label">  @MyRes.Name</p>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder =  @MyRes.Name })
                        </div>
                    </div>
                    <div class="form-group">
                         <p class="col-lg-3 control-label">  @MyRes.Password</p>
                        <div class="col-lg-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = @MyRes.Password })
                        </div>
                    </div>
                    <div class="form-group">
                          <p class="col-lg-3 control-label">  @MyRes.ConfirmPassword</p>
                        <div class="col-lg-8">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = @MyRes.ConfirmPassword })
                        </div>
                    </div>
                    <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-6">
                            <input type="submit" class="btn btn-success" value="@MyRes.Register" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
