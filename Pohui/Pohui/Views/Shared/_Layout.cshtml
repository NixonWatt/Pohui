<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title — приложение ASP.NET MVC</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/themes/Black/bootstrap.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/jquery-2.0.3.js">
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown();
        });
    </script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a href="./" class="navbar-brand">Pohui</a>
                </div>
                <div class="navbar-collapse collapse navbar-inverse-collapse" id="navbar-main">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="\" class="btn">Home</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div id="container" style="margin-top: 65px">
        <div class="row">
            <div class="col-lg-2" style="height: 100%" id="Tag">
            </div>
            <div class="col-lg-10" id="Body">
                @RenderSection("featured", required: false)
                @RenderBody()
            </div>
        </div>
    </div>
@*    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year — приложение ASP.NET MVC</p>
            </div>
        </div>
    </footer>*@

    @RenderSection("scripts", required: false)
</body>
</html>
