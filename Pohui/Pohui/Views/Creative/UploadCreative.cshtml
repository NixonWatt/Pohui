@using MyRes = Resources.Resource
@model Pohui.Models.UploadedCreative

@{
    ViewBag.Title = @MyRes.UpploadCrative;
}

<h2>@MyRes.CreateCreative</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="col-lg-10">
        <div class="well">
            <form class="bs-example form-horizontal">
                <fieldset>
                    <legend>Create Creative</legend>
                    <div class="form-group">
                         <p class="col-lg-3 control-label"> Name</p>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder =  "" })
                        </div>
                    </div>
                    <div class="form-group">
                         <p class="col-lg-3 control-label"> Description </p>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "" })
                        </div>
                    </div>
                    <div class="form-group">
                          <p class="col-lg-3 control-label"> Tags </p>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.Tags, new { @class = "form-control", @placeholder = "" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-6">
                            <input type="submit" class="btn btn-success" value="Submit" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
}


