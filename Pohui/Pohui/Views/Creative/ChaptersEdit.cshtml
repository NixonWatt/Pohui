@using MyRes = Resources.Resource
@model Pohui.Models.Chapter

@{
    ViewBag.Title = "ChaptersEdit";
}
<head>
  <meta charset="utf-8" />
  <title>jQuery UI Draggable + Sortable</title>
  <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
  <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <link rel="stylesheet" type="text/css" href="/Scripts/mdd_styles.css" />
	<script type="text/javascript" src="/Scripts/MarkdownDeepLib.min.js"></script>
	<script type="text/javascript">
	    $(function () {
	        $("textarea.mdd_editor").MarkdownDeep({
	            help_location: "/Scripts/mdd_help.htm",
	            ExtraMode: true
	        });
	    })
	</script>
  
  <script>
      $(function () {
          $("#sortable").sortable({
              revert: true
          });
          $("#draggable").draggable({
              connectToSortable: "#sortable",
              helper: "clone",
              revert: "invalid"
          });
          $("ul, li").disableSelection();
      });
  </script>
</head>
<body>
 
<ul>
  <li id="draggable" class="btn btn-default">Глава 2</li>
</ul>
 
<ul id="sortable">
  <li class="btn btn-default">Глава 1</li>
</ul>
 
    




		<div class="mdd_toolbar"></div>
		<textarea class="mdd_editor" rows="10"></textarea> 
		<div class="mdd_resizer"></div>
		<div class="mdd_preview"></div>



 
</body>


